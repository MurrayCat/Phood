<div class="container">
  <h1 >Menu Items</h1>
  <table class="table table-striped">
    <thead>
      <tr class="info">
        <th>Name</th>
        <th>Price</th>
        <th>Desription</th>
        <th>Resturant</th>
        <th></th>
        <th></th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @menu_items.each do |menu_item| %>
        <tr>
          <td><%= menu_item.name %></td>
          <td><%= menu_item.price %></td>
          <td><%= menu_item.desription %></td>
          <td><%= menu_item.resturant.name %></td>
          <td><%= link_to 'Show', menu_item %></td>
          <td><%= link_to 'Edit', edit_menu_item_path(menu_item) %></td>
          <td><%= link_to 'Delete', menu_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
         </tr>
      <% end %>
    </tbody>
  </table>
  <%= button_to "New Menu Item", new_menu_item_path, 
      :class => "btn btn-success", :method => :get %>
</div>

